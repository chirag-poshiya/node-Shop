<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if(products.length) {%> 
                <ul>
                    <% products.forEach(p => { %>
                        <li>
                            <%= p.productData.imageUrl%> 
                            <p>
                                <%= p.productData.title%> (<%= p.qty %>)
                            </p>
                            <p><%= p.productData.description%> </p>

                            <form action="/admin/delete-cart-product" method="POST">
                                <input type="hidden" name="prodId" value="<%=p.productData.id%>">
                                <button class="btn" type="submit">Delete</button>
                            </form>
                        </li>
                    <%}) %> 
                    <li></li>
                </ul>
            <% } else { %> 
                <h1>No Products in cart </h1>
                <% } %>
        </main>
        <%- include('../includes/end.ejs') %>